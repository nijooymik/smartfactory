package kr.co.mlec;

import java.io.IOException;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import kr.co.mlec.controller.BoardListController;
import kr.co.mlec.controller.BoardWriteFormController;

@WebServlet("*.do")
public class DispatcherServlet extends HttpServlet { //클래스

	@Override
	protected void service(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {
		String context = request.getContextPath();
		System.out.println("context : " + context);
		String uri = request.getRequestURI();
		uri = uri.substring(context.length());
		System.out.println("호출 uri : " + uri);

		Controller control = null;
		String callPage = "";
		try {
			switch (uri) {
			case "/board/list.do":
				BoardListController list = new BoardListController();
				callPage = list.handleRequest(request, response);
				break;
			case "/board/writeForm.do":
				BoardWriteFormController write = new BoardWriteFormController();
				callPage = write.handleRequest(request, response);
				break;
			}

			RequestDispatcher dispatcher = request.getRequestDispatcher(callPage);
			dispatcher.forward(request, response);
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
}